FROM adoptopenjdk/openjdk8-openj9:alpine

RUN apk update && apk add \
	bash \
	build-base \
	ccache \
	coreutils \
	git \
	gnutls-dev \
	libaio-dev \
	libcap-dev \
	libnet-dev \
	libnl3-dev \
	pkgconfig \
	protobuf-c-dev \
	protobuf-dev \
	python3 \
	sudo \
	maven \
	ip6tables \
	iptables \
	bash

COPY . /criu
WORKDIR /criu

RUN make

ENTRYPOINT mvn -q -f test/javaTests/pom.xml test

