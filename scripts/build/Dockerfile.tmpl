ARG CC=gcc

RUN apt-get clean

RUN apt-get update

RUN apt-get install -y \
                build-essential \
                protobuf-c-compiler \
                libprotobuf-c0-dev \
                libprotobuf-dev \
                bsdmainutils \
                protobuf-compiler \
                python-minimal \
                libaio-dev \
                libcap-dev \
                iptables \
                libnl-3-dev \
                libselinux-dev \
                pkg-config \
                git-core \
                $CC

COPY . /criu
WORKDIR /criu

RUN make mrproper
RUN make -j $(nproc) CC=$CC criu/parasite-syscall.o
RUN make -j $(nproc) CC=$CC
RUN make mrproper
RUN bash -c 'CLEAN="$(git clean -ndx --exclude=scripts/build)"; echo "${CLEAN}"; test -z "${CLEAN}"; exit $?'
